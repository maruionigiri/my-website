<body>\
\
<div class="container">\
    <h1>Today's Timeline</h1>\
\
    <div class="input-group">\
        <input type="time" id="timeInput">\
        <input type="text" id="taskInput" placeholder="\uc0\u20309 \u12434 \u12377 \u12427 \u65311 " onkeypress="handleKey(event)">\
        <button onclick="addSchedule()">\uc0\u36861 \u21152 </button>\
    </div>\
\
    <div id="timeline" class="timeline">\
        </div>\
</div>\
\
<script>\
    let schedules = JSON.parse(localStorage.getItem('mySchedules')) || [];\
\
    function render() \{\
        const timeline = document.getElementById('timeline');\
        timeline.innerHTML = '';\
\
        // \uc0\u26178 \u38291 \u38918 \u12395 \u20006 \u12403 \u26367 \u12360 \
        schedules.sort((a, b) => a.time.localeCompare(b.time));\
\
        schedules.forEach((item, index) => \{\
            const div = document.createElement('div');\
            div.className = 'item';\
            div.innerHTML = `\
                <div class="item-content">\
                    <span class="time">$\{item.time\}</span>\
                    <span class="task">$\{item.task\}</span>\
                </div>\
                <button class="delete-btn" onclick="deleteItem($\{index\})">\uc0\u21066 \u38500 </button>\
            `;\
            timeline.appendChild(div);\
        \});\
\
        localStorage.setItem('mySchedules', JSON.stringify(schedules));\
    \}\
\
    function addSchedule() \{\
        const timeInput = document.getElementById('timeInput');\
        const taskInput = document.getElementById('taskInput');\
\
        if (!timeInput.value || !taskInput.value) return;\
\
        schedules.push(\{\
            time: timeInput.value,\
            task: taskInput.value\
        \});\
\
        taskInput.value = ''; // \uc0\u20837 \u21147 \u27396 \u12434 \u12463 \u12522 \u12450 \
        render();\
    \}\
\
    function deleteItem(index) \{\
        schedules.splice(index, 1);\
        render();\
    \}\
\
    function handleKey(e) \{\
        if (e.key === 'Enter') addSchedule();\
    \}\
\
    // \uc0\u21021 \u26399 \u34920 \u31034 \
    render();\
</script>\
\
